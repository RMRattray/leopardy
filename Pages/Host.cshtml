@page
@model Leopardy.Pages.HostModel
@{
    ViewData["Title"] = "Host Game";
}

<div class="container-fluid">
    <div id="gameSelection" class="text-center mt-5">
        <h1 class="mb-4">Host a Jeopardy! Game</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Select a Game Template</h3>
                        <select id="gameTemplate" class="form-select form-select-lg mb-3">
                            <option value="">-- Select a game --</option>
                            <option value="Science & Technology">Science & Technology</option>
                            <option value="History & Geography">History & Geography</option>
                        </select>
                        <button id="createGameBtn" class="btn btn-primary btn-lg">Create Game</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="gameLobby" class="d-none">
        <div class="text-center mb-4">
            <h2>Game Code</h2>
            <h1 id="gameCode" class="display-1 text-primary" style="font-family: 'Courier New', monospace; font-weight: bold;">----</h1>
            <p class="lead">Share this code with players to join the game</p>
            <button id="startGameBtn">Start game</button>
        </div>
    </div>

    <div id="gameBoard" class="d-none">
        <div class="row mb-3">
            <div class="col-md-6">
                <h3>Players</h3>
                <div id="playersList" class="list-group"></div>
            </div>
            <div class="col-md-6">
                <div id="currentClueArea" class="d-none">
                    <div class="card bg-dark text-white mb-3">
                        <div class="card-body">
                            <h4 id="currentCategory" class="card-title"></h4>
                            <h5 id="currentValue" class="card-subtitle mb-3"></h5>
                            <p id="currentQuestion" class="card-text fs-4"></p>
                        </div>
                    </div>
                    <div id="buzzedInArea" class="d-none">
                        <div class="alert alert-info">
                            <h5 id="buzzedPlayerName"></h5>
                            <p id="playerAnswer" class="fs-5"></p>
                            <div>
                                <button id="markCorrect" class="btn btn-success me-2">Correct</button>
                                <button id="markIncorrect" class="btn btn-danger">Incorrect</button>
                            </div>
                        </div>
                    </div>
                    <button id="closeClueBtn" class="btn btn-secondary">Close Clue</button>
                </div>
            </div>
        </div>
        
        <div id="jeopardyBoard" class="table-responsive">
            <table class="table table-bordered text-center" style="background-color: #060CE9;">
                <thead>
                    <tr id="categoryRow"></tr>
                </thead>
                <tbody id="cluesBody"></tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/host.js"></script>

@section Scripts {
    <script>
        // SignalR will be loaded here
    </script>
}

