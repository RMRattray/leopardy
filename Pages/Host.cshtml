@page
@model Leopardy.Pages.HostModel
@{
    ViewData["Title"] = "Host Game";
}

<div class="container-fluid">
    <div id="gameSelection" class="text-center mt-5">
        <h1 class="mb-4">Host a Jeopardy! Game</h1>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title mb-3">Game Setup</h3>
                        
                        <ul class="nav nav-tabs mb-3" id="gameSourceTabs" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="template-tab" data-bs-toggle="tab" data-bs-target="#template" type="button" role="tab">Templates</button>
                            </li>
                            <li class="nav-item" role="presentation" id="savedGamesTabItem" style="display: none;">
                                <button class="nav-link" id="saved-tab" data-bs-toggle="tab" data-bs-target="#saved" type="button" role="tab">My Games</button>
                            </li>
                            <li class="nav-item" role="presentation" id="csvUploadTabItem">
                                <button class="nav-link" id="csv-tab" data-bs-toggle="tab" data-bs-target="#csv" type="button" role="tab">Upload CSV</button>
                            </li>
                        </ul>
                        
                        <div class="tab-content" id="gameSourceTabsContent">
                            <div class="tab-pane fade show active" id="template" role="tabpanel">
                                <div class="mb-3">
                                    <label for="gameTemplate" class="form-label">Select a Game Template</label>
                                    <select id="gameTemplate" class="form-select form-select-lg">
                                        <option value="">-- Select a game --</option>
                                        <option value="Science & Technology">Science & Technology</option>
                                        <option value="History & Geography">History & Geography</option>
                                    </select>
                                </div>
                            </div>
                            
                            <div class="tab-pane fade" id="saved" role="tabpanel">
                                <div class="mb-3">
                                    <label for="savedGameSelect" class="form-label">Select a Saved Game</label>
                                    <select id="savedGameSelect" class="form-select form-select-lg">
                                        <option value="">-- Loading games --</option>
                                    </select>
                                </div>
                                <div id="savedGamesError" class="alert alert-danger d-none"></div>
                            </div>
                            
                            <div class="tab-pane fade" id="csv" role="tabpanel">
                                <div class="mb-3">
                                    <label for="csvFile" class="form-label">Upload CSV File</label>
                                    <input type="file" id="csvFile" class="form-control" accept=".csv">
                                    <small class="form-text text-muted">Upload a CSV file in the format: Category row, then alternating clue/answer rows</small>
                                </div>
                                <div id="csvError" class="alert alert-danger d-none"></div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="maxPlayersPerRound" class="form-label">Max Players Per Round</label>
                                <input type="number" id="maxPlayersPerRound" class="form-control" min="1" placeholder="Leave empty for infinite">
                                <small class="form-text text-muted">Leave empty for unlimited</small>
                            </div>
                            <div class="col-md-6">
                                <label for="maxPlayersPerGame" class="form-label">Max Players Per Game</label>
                                <input type="number" id="maxPlayersPerGame" class="form-control" min="1" placeholder="Leave empty for infinite">
                                <small class="form-text text-muted">Leave empty for unlimited</small>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="correctGuesserBehavior" class="form-label">Correct Guesser Behavior</label>
                            <select id="correctGuesserBehavior" class="form-select">
                                <option value="0">Correct guesser stays</option>
                                <option value="1">Correct guesser leaves</option>
                                <option value="2">All-new players every round</option>
                            </select>
                        </div>
                        
                        <div class="mb-3" id="correctGuesserChoosesDiv">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="correctGuesserChooses" checked>
                                <label class="form-check-label" for="correctGuesserChooses">
                                    Correct guesser chooses next clue
                                </label>
                            </div>
                        </div>
                        
                        <button id="createGameBtn" class="btn btn-primary btn-lg">Create Game</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="gameLobby" class="d-none">
        <div class="text-center mb-4">
            <h2>Game Code</h2>
            <h1 id="gameCode" class="display-1 text-primary" style="font-family: 'Courier New', monospace; font-weight: bold;">----</h1>
            <p class="lead">Share this code with players to join the game</p>
            <div class="mb-3">
                <a href="/View?gameId=" id="viewLink" class="btn btn-info me-2" target="_blank">Open View Page</a>
                <button id="startGameBtn" class="btn btn-success">Start game</button>
            </div>
        </div>

        <div class="mt-4">
            <h3 class="text-center mb-3">Joined Players</h3>
            <p id="lobbyNoPlayers" class="text-muted text-center">No players have joined yet.</p>
            <div id="lobbyPlayers" class="d-flex flex-wrap justify-content-center gap-3"></div>
        </div>
    </div>

    <div id="gameBoard" class="d-none">
        <div class="row mb-3">
            <div class="col-md-6">
                <h3>Players</h3>
                <div id="playersList" class="list-group"></div>
            </div>
            <div class="col-md-6">
                <div id="currentClueArea" class="d-none">
                    <div class="card bg-dark text-white mb-3">
                        <div class="card-body">
                            <h4 id="currentCategory" class="card-title"></h4>
                            <h5 id="currentValue" class="card-subtitle mb-3"></h5>
                            <p id="currentQuestion" class="card-text fs-4"></p>
                        </div>
                    </div>
                    <div id="buzzedInArea" class="d-none">
                        <div class="alert alert-info">
                            <p id="playerAnswer" class="fs-5"></p>
                            <div id="correctAnswerArea" class="mb-3">
                                <div class="alert alert-success">
                                    <strong>Correct Answer:</strong> <span id="correctAnswerText"></span>
                                </div>
                            </div>
                            <div>
                                <button id="markCorrect" class="btn btn-success me-2">Correct</button>
                                <button id="markIncorrect" class="btn btn-danger">Incorrect</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/host.js"></script>

@section Scripts {
    <script>
        // SignalR will be loaded here
    </script>
}

