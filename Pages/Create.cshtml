@page
@model Leopardy.Pages.CreateModel
@{
    ViewData["Title"] = "Create Game";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Create a Jeopardy Game</h1>
            
            <div class="mb-3">
                <label for="gameName" class="form-label">Game Name</label>
                <input type="text" class="form-control" id="gameName" placeholder="Enter game name">
            </div>

            <div class="mb-3">
                <button id="addCategoryBtn" class="btn btn-primary">Add Category</button>
                <button id="downloadCsvBtn" class="btn btn-success ms-2">Download CSV</button>
                <button id="saveGameBtn" class="btn btn-info ms-2 d-none">Save Game</button>
            </div>

            <div id="categoriesContainer"></div>
        </div>
    </div>
</div>

<script src="~/js/create.js"></script>

@section Scripts {
    <script>
        // Check if user is logged in
        fetch('/api/auth/check')
            .then(response => response.json())
            .then(data => {
                if (data.isAuthenticated) {
                    document.getElementById('saveGameBtn').classList.remove('d-none');
                }
            });
    </script>
}

