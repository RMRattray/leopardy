@page
@model IndexModel
@{
    ViewData["Title"] = "Round and Round";
}

<div class="text-center mt-5">
    <h1 class="display-1 mb-4" style="color: #060CE9; font-family: 'Swiss 911', 'Impact', sans-serif; text-shadow: 3px 3px 0px #000, -1px -1px 0px #000, 1px -1px 0px #000, -1px 1px 0px #000;">ROUND AND ROUND</h1>
    
    <div class="row justify-content-center mt-5">
        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow-lg">
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title mb-4">Host a Game</h2>
                    <p class="card-text flex-grow-1">Create and host a game. Select a game template, share the game code, and judge the answers.  Correct answers will be shown on this screen, so don&rsquo;t project it.</p>
                    <a href="/Host" class="btn btn-primary btn-lg mt-auto">Host Game</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow-lg">
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title mb-4">Play a Game</h2>
                    <p class="card-text flex-grow-1">Join an existing game as a player. Enter your name and the game code to start playing.</p>
                    <a href="/Play" class="btn btn-success btn-lg mt-auto">Join Game</a>
                </div>
            </div>
        </div>

        <div class="col-md-5 mb-4">
            <div class="card h-100 shadow-lg">
                <div class="card-body d-flex flex-column">
                    <h2 class="card-title mb-4">Watch a Game</h2>
                    <p class="card-text flex-grow-1">Watch a game from the sidelines.  Enter the game code to start watching.</p>
                    <a href="/View" class="btn btn-info btn-lg mt-auto">Join Game</a>
                </div>
            </div>
        </div>
    </div>
</div>
